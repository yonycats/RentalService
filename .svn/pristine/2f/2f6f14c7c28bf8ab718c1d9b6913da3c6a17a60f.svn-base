function handleTabClick(tabName) {

    document.querySelector(`a[name='${tabName}']`).scrollIntoView({ behavior: 'smooth' });
}

function getTabIndex(tabName) {
    switch (tabName) {
        case 'tab1':
            return 1;
        case 'tab2':
            return 2;
        case 'tab3':
            return 3;
        default:
            return 1;
    }
}