@charset "UTF-8";

* {
	font-family: "Noto Sans KR", sans-serif;
}

.navbar {
	margin-bottom: 0;
	border-radius: 0;
}

.carousel-inner img {
	width: 100%;
	margin: auto;
	min-height: 200px;
}

@media ( max-width : 600px) {
	.carousel-caption {
		display: none;
	}
}

a {
	text-decoration: none;
	color: black;
}

#header-category {
	display: flex;
	list-style: none;
	justify-content: center;
	font-size: 20px;
}

#header-category li {
	color: black;
	padding: 8px 12px;
}

#header-category li::after {
	content: "|";
	padding-left: 24px;
}

#header-category li:last-child:after {
	content: "";
}

.container-fluid {
	border-bottom: 1px solid #e2e2e2;
}

body {
	overflow-y: auto;
}

.fixed-widget {
	position: fixed;
	top: 600px;
	right: 20px;
	width: 60px;
	padding: 15px;
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: 20px;
	z-index: 1300;
}

.fixed-widget a {
	width: 60px;
	height: 60px;
	border: 1px solid black;
	border-radius: 30px;
	display: flex;
	align-items: center;
	justify-content: center;
	background-color: white;
	text-align: center;
	font-size: 15px;
	font-weight: 500;
}

.fixed-widget img {
	width: 60px;
	height: 60px;
	border-radius: 30px;
	border: 1px solid black;
}

.navbar-nav>.separator {
	display: flex;
	align-items: center;
	padding-left: 10px;
	padding-right: 10px;
	color: black;
	height: 50px;
	pointer-events: none;
}

#wrap {
	min-height: 100vh;
	position: relative;
	width: 100%;
}

footer {
	background-color: #232323;
	width: 100%;
	height: 220px;
	bottom: 0px;
	position: relative;
	color: #dddddd;
}

.footer-info {
	float: left;
}

#footer-category {
	display: flex;
	list-style: none;
	justify-content: start;
	font-size: 15px;
	font-weight: 400;
}

#footer-category a {
	color: white;
}

#footer-category li {
	color: #dddddd;
	padding: 8px 12px;
}

#footer-category li::after {
	content: "|";
	padding-left: 24px;
}

#footer-category li:last-child:after {
	content: "";
}

#footer-info {
	display: flex;
	list-style: none;
	flex-direction: column;
	padding: 10px 0px 0px 60px;
}

#footer-info li {
	margin-bottom: 5px;
}

aside {
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	width: 180px;
	margin-top: 70px;
	margin-left: 45px;
}

.aside-hd {
	background-color: #555555;
	width: 100%;
	text-align: center;
}

.aside-name {
	background-color: #333333;
	color: #dddddd;
	width: 100%;
	padding: 10px 0 10px 15px;
	font-weight: 400;
}

.aside-cs {
	background-color: white;
	color: black;
	width: 100%;
	border-width: 0 1px 1px 1px;
	border-color: #ddd;
	margin: 0;
}

.aside-cs dt {
	height: 44px;
	font-size: 14px;
	font-weight: 500;
	line-height: 45px;
	border: 1px solid #ddd;
	display: block;
	position: relative;
}

.aside-cs dt a {
	display: block;
	color: #454545;
	width: 148px;
	height: 44px;
	padding: 0 15px;
}

.aside-cs dt a::after {
	content: ">";
	margin-left: 10px;
	font-size: 19px;
	line-height: 2em;
	color: #ccc;
	position: absolute;
	right: 15px;
}

.aside-cs dt:hover a {
	color: red;
	text-decoration-line: none;
}

.aside-cs dt:hover a::after {
	color: black;
}

.eng {
	padding-top: 30px;
	font-size: 14px;
	font-weight: 400;
	color: #e1e1e1;
}

.kor {
	padding-top: 10px;
	font-size: 22px;
	font-weight: 600;
	color: white;
	padding-bottom: 30px;
}

.mypage-main {
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	margin-top: 30px;
}

.mypage-main-top {
	width: 100%;
}

.mypage-main-top-nav {
	text-align: right;
}

.mypage-main-top-title {
	text-align: center;
	font-size: 30px;
}

* {
	font-family: 'NotoSansKR', '나눔고딕', 'Nanum Gothic', '맑은고딕',
		'Malgun Gothic', 'gulim', 'arial', 'Dotum', 'AppleGothic', sans-serif;
	font-weight: 400;
}

